<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.vhx"
       name="VHX"
       version="1.0.1"
       provider-name="clofresh">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>VHX video plugin</summary>
    <description>Watch videos from your Facebook, Twitter and Tumblr via Vhx.tv</description>
  </extension>
</addon>
